<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/recycler_container"
              android:layout_marginVertical="10dp">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/name" android:textSize="16sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/phone" android:layout_marginVertical="5dp"
            android:textAlignment="center" android:textSize="16sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/description" android:textAlignment="viewEnd"
            android:textSize="16sp"/>
</LinearLayout>